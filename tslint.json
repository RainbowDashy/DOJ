{
	"extends": "tslint:recommended",
	"rules": {
		"indent": {
			"options": "tabs"
		},
		"interface-name": false,
		"no-console": false,
		"object-literal-sort-keys": false,
		"ordered-imports": {
			"options": {
				"import-sources-order": "lowercase-first",
				"named-imports-order": "lowercase-first"
			}
		},
		"quotemark": {
			"options": [
				"single",
				"jsx-double",
				"avoid-escape"
			]
		},
		"semicolon": {
			"options": "never"
		},
		"trailing-comma": {
			"options": {
				"multiline": "never"
			}
		}
	}
}
